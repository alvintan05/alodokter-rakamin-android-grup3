<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.onboarding.OnboardingSliderFragment">

    <ImageView
        android:id="@+id/iv_onboarding"
        android:layout_width="0dp"
        android:layout_height="260dp"
        android:layout_marginHorizontal="@dimen/spacing_40"
        android:layout_marginTop="@dimen/spacing_60"
        app:layout_constraintBottom_toTopOf="@+id/tv_onboarding_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/onboarding_article" />

    <TextView
        android:id="@+id/tv_onboarding_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_100"
        android:layout_marginBottom="@dimen/spacing_10"
        android:fontFamily="@font/lato_bold"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/font_24"
        app:layout_constraintBottom_toTopOf="@+id/tv_onboarding_desc"
        app:layout_constraintEnd_toEndOf="@id/tv_onboarding_desc"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/tv_onboarding_desc"
        app:layout_constraintTop_toBottomOf="@+id/iv_onboarding"
        tools:text="@string/onboarding_article" />

    <TextView
        android:id="@+id/tv_onboarding_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_22"
        android:fontFamily="@font/lato"
        android:text="@string/onboarding_article_desc"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/font_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_onboarding_title" />

</androidx.constraintlayout.widget.ConstraintLayout>