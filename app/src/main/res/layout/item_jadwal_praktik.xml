<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/spacing_5"
    android:layout_marginTop="@dimen/spacing_5"
    android:clickable="false"
    android:contextClickable="false"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_hari_praktik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_15"
        android:text="Hari"
        android:padding="@dimen/spacing_2"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_jam_praktik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/spacing_20"
        android:gravity="right"
        android:padding="@dimen/spacing_2"
        android:text="Jadwal Praktik"
        android:textColor="@color/black" />

</LinearLayout>